/* PAT Basic 1001 */

#include <stdio.h>

int main(void)
{
    int num;
    int count=0;
    
    scanf("%d",&num);
    
    while(num!=1&&num>0)
    {
        if(num%2==0)
        {
            num=num/2;
            count++;
        }
        else
        {
            num=(3*num+1)/2;
            count++;
        }
    }
    printf("%d",count);
    return 0;
}
